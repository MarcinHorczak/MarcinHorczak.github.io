{
  "semi": true,
  "trailingComma": "all",
  "singleQuote": false,
  "printWidth": 80,
  "tabWidth": 2,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "^react$",
    "react",
    "<THIRD_PARTY_MODULES>",
    "@/app",
    "@/shared",
    "^[./](?!.+\\.(\\w){1})",
    "^[./].+\\.(\\w){1}"
  ],
  "importOrderSortSpecifiers": true
}
